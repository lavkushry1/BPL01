FROM node:18-alpine

RUN apk add --no-cache openssl

WORKDIR /app

# Install dependencies first (caching)
COPY package*.json ./
RUN npm install

# Downgrade uuid to v8 (supports CommonJS, v9+ is ESM-only)
RUN npm install uuid@^8.3.2

# Copy source
COPY . .

# Generate Prisma Client
RUN npx prisma generate

# Expose port
EXPOSE 4000

# Start with hot reload
CMD ["npm", "run", "dev"]
