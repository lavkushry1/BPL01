STATIC_MAX_AGE=86400000

# JWT Authentication
JWT_SECRET=eventia_jwt_secret_key_2024
JWT_REFRESH_SECRET=eventia_jwt_refresh_secret_key_2024
JWT_EXPIRES_IN=1d
