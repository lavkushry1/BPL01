# API Configuration
# Base URL for API requests - should match the backend server
VITE_API_URL=http://localhost:4000/api/v1

# WebSocket Configuration
# WebSocket URL for real-time updates - should match the backend server
VITE_WS_URL=ws://localhost:4000

# Feature Flags
# Enable to use mock data instead of real API calls
VITE_USE_MOCK_DATA=false

# Enable to use the new checkout flow
VITE_ENABLE_NEW_CHECKOUT=false

# Enable to show debug tools in the UI
VITE_ENABLE_DEBUG_TOOLS=false

# Analytics (disabled by default)
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=

# Authentication Settings
# These settings control token expiry times for client-side management
VITE_ACCESS_TOKEN_EXPIRY=15m
VITE_REFRESH_TOKEN_EXPIRY=7d

# Image CDN (optional)
VITE_IMAGE_CDN_URL=

# Payment Gateway (if applicable)
VITE_PAYMENT_GATEWAY_PUBLIC_KEY=

# App Version - updated by build process
VITE_APP_VERSION=$npm_package_version 