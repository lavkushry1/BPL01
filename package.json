{
  "name": "eventia-ticketing-platform",
  "version": "1.0.0",
  "description": "Full-stack ticketing platform for events",
  "scripts": {
    "dev": "npm run dev:frontend",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm run test",
    "test:frontend": "cd frontend && npm run test",
    "test:e2e": "cd frontend && npm run test:e2e",
    "docker:dev": "docker-compose -f infrastructure/docker-compose.yml up",
    "docker:prod": "docker-compose -f infrastructure/docker-compose.prod.yml up -d",
    "migrate": "cd backend && npm run migrate",
    "migrate:undo": "cd backend && npm run migrate:undo",
    "seed": "cd backend && npm run seed",
    "start:dev": "scripts/run-dev.sh"
  },
  "keywords": [
    "ticketing",
    "events",
    "node",
    "express",
    "react",
    "typescript"
  ],
  "author": "Eventia Team",
  "license": "MIT",
  "devDependencies": {
    "@types/qrcode": "^1.5.6",
    "concurrently": "^9.2.1"
  },
  "dependencies": {
    "@radix-ui/react-separator": "^1.1.8",
    "qrcode": "^1.5.4",
    "qrcode.react": "^4.2.0"
  }
}
